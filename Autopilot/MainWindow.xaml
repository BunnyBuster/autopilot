<Window x:Class="Autopilot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Autopilot" WindowState="Maximized" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Right">
            <Label Content="Suche"/>
            <TextBox/>
            <Button Content="Einstellungen" Click="Einstellungen_anzeigen"/>
            <Button Content="Hilfe" Click="Hilfe_anzeigen"/>
        </StackPanel>
        <StackPanel DockPanel.Dock="Left">
            <Button Content="+" Click="Neu_anzeigen"/>
            <Button Content="Aufträge" Click="Aufträge_anzeigen"/>
            <Button Content="Rechnungen" Click="Rechnungen_anzeigen"/>
            <Button Content="Kalender" Click="Kalender_anzeigen"/>
        </StackPanel>
        <Frame Name="Inhaltsanzeige" DockPanel.Dock="Right" HorizontalContentAlignment="Stretch" NavigationUIVisibility="Hidden" />
    </DockPanel>
</Window>
