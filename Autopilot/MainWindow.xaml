<Window x:Class="Autopilot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Autopilot" WindowState="Maximized" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Right">
            <Label Content="Suche"/>
            <TextBox/>
            <Button Content="Einstellungen"/>
            <Button Content="Hilfe"/>
        </StackPanel>
        <StackPanel DockPanel.Dock="Left">
            <Button Content="+"/>
            <Button Content="Posteingang"/>
            <Button Content="Rechnungen" Click="Rechnungen_anzeigen"/>
            <Button Content="Kalender"/>
        </StackPanel>
        <Grid DockPanel.Dock="Right">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="100"/> <!-- beide sollten die volle Breite zu gleichen Teilen ausfüllen -->
                <ColumnDefinition Width="Auto" MinWidth="100"/>
            </Grid.ColumnDefinitions>
            <Frame Name="Inhaltsanzeige"  Grid.Column="0">

            </Frame>
            <Grid Name="Hilfebereich"  Grid.Column="1">

            </Grid>
        </Grid>
    </DockPanel>
</Window>
